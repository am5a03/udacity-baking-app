<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/recipe_card"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/colorSecondaryDark"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="@dimen/material_large"
                android:paddingRight="@dimen/material_large"
                android:paddingTop="@dimen/material_medium"
                android:paddingBottom="@dimen/material_medium"
                tools:text="Brownies"
                android:id="@+id/title"
                android:background="@color/recipeDescBg"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="@dimen/material_medium"
                android:id="@+id/serving"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Serving 1" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
